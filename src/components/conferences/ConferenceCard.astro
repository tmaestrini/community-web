---
import HorizontalCard from "@components/HorizontalCard.astro";
import dayjs from "dayjs";
import localizedFormat from "dayjs/plugin/localizedFormat";
import createSlug from "src/lib/createSlug";

interface Props {
    conference: any;
}

const { conference } = Astro.props;

const displayDate = dayjs(conference.data.eventDate).format("lll");
dayjs.extend(localizedFormat);
---

<HorizontalCard
    title={conference.data.title}
    img={conference.data.heroImage}
    date={displayDate}
    url={"/conferences/" + createSlug(conference.data.title, conference.slug)}
    target="_self"
    badge={conference.data.conference}
    tags={conference.data.tags}
/>
